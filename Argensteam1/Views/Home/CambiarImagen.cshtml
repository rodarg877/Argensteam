
@model Argensteam1.Models.Usuario

<h1 class="titulo ml-3">Seleccione su foto De Perfil</h1>

<form asp-action="CambiarImagen">
<div class="row mt-5">
               @for (var i = 1; i < 5; i++)
                 {
                     var o=i;
                <div class="col-md-3 ml-3 tarjeta d-block" >
                    <img  class= "tamañoJuegoVenta" src=@Url.Content("~/images/avatar" + @i +".jpg") alt="@i">
                   <br>
                    <label asp-for="FotoPerfil" class="titulo2"> Seleccionar</label>
                    <input type="radio" asp-for="FotoPerfil" value=@Url.Content("~/images/avatar" + @i +".jpg")>
                </div> 
                }
            </div>
            <div class="text-center">
             <input type="submit"  class="btn btn-outline-primary " value="Confirmar seleccion">
             </div>
            </form>
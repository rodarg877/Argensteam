
@model Argensteam1.Models.Usuario
@{
    ViewData["Title"] = "Registrarse";
}

  <div class="d-flex flex-column min-vh-100  justify-content-center align-items-center a1">
        <div class="card p-4 text-light bg-dark mb-5 rounded-lg ancho">
            <div class="card-header">
                <h3>CREAR TU CUENTA </h3>
            </div>
            <div class="card-body w-100 mt-3">
                <form asp-action="Registro">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group form-group mt-3">
                        <label class="w-100" for="username">User name</label>
                        <input  class="form-control w-100 mb-3" asp-for="Username" placeholder="Usuario">
                        <span asp-validation-for="Username" class="text-danger"></span>
                        <label class="w-100" for="pass">Dirección de correo electrónico</label>
                        <input  class="form-control w-100 mb-3" asp-for="Email" placeholder="email@email.com" >
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <label class="w-100" for="pass">Password</label>
                        <input  class="form-control w-100 mb-3" asp-for="Password" placeholder="Contraseña">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <label for="confirmPass" class="w-100">Confirma tu Password</label>
                        <input type="password" class="form-control w-100 mb-3" placeholder="Contraseña" name="confirmPass">
                      
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="terminos" name="terminos">
                            <label for="terminos"> Tengo 13 años o más y acepto los términos del Acuerdo de Suscriptor a
                                ArgenSteam y la Política de Privacidad</label>
                        </div>
                    </div>
                    <div class="form-group mt-5">
                        <input type="submit" value="Registro" class="btn bg-secondary float-end text-white w-100"
                            name="login-btn">
                    </div>
                </form>
            </div>
        </div>
    </div>
    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
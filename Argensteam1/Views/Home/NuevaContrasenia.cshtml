@model Argensteam1.Models.Usuario
@{
    ViewData["Title"] = "Cambio de Contraseña";
}
 <div class="d-flex flex-column min-vh-100  justify-content-center align-items-center a1">
            <div class="card p-4 text-light bg-dark mb-5 rounded-lg ancho">
                <div class="card-header">
                    <h3>Cambiar Contraseña </h3>
                </div>
                <div class="card-body w-100 mt-3">
                    <form name="login" asp-action="NuevaContrasenia" asp-route-id="" method="post">
                            <div class="input-group form-group mt-3 w-100">
                                <div class="bg-secondary rounded-start">
                                    <span class="m-3"><i class="bi bi-person mt-3"  ></i></span>
                                </div>
                                 <input id="usuario" class="form-control " placeholder="Usuario" asp-for="Username">
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>

                            <div class="input-group form-group mt-3 w-100">
                                <div class="bg-secondary rounded-start">
                                    <span class="m-3"><i class="bi bi-lock mt-3"  ></i></span>
                                </div>
                                <input  type="password" class="form-control " placeholder="Contraseña" asp-for="Password">
                            </div>
                            
                            <span asp-validation-for="Password" class="text-danger"></span>
                        
                        <div class="input-group form-group mt-3 w-100">
                            <div class="bg-secondary rounded-start">
                                <span class="m-3"><i class="bi bi-lock"></i></span>
                            </div>
                            <input type="password" name="contraseniaRepetida" class="form-control " placeholder="Repetir Contraseña" >
                        </div>
                        

                        <div class="form-group mt-5">
                            <input type="submit" value="Cambiar" class="btn bg-secondary float-end text-white w-100"  name="login-btn">
                        </div>
                    </form>
                </div>
            </div>
        </div>
          @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
